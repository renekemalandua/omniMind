{
	"moduleFileExtensions": [
		"js",
		"json",
		"ts"
	],
	"rootDir": "../src",
	"testRegex": "tests/e2e/.*\\.e2e-spec\\.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/$1"
	},
	"collectCoverageFrom": [
		"../src/**/*.(t|j)s"
	],
	"coverageDirectory": "../coverage-e2e",
	"testEnvironment": "node"
}
